@model HemsTask.Model.Models.Product

@{
	ViewData["Title"] = "details";
}

<h1>Details</h1>

<div>
	<h4>Product</h4>

	<hr />

	<dl class="row">
		<dt class="col-sm-2">
			Product code
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ProductCode)
		</dd>
		<dt class="col-sm-2">
			Product type code
		</dt>
		<dd class="col-sm-10">
			<span class="badge badge-dark">@Html.DisplayFor(model => model.ProductTypeCode)</span>
		</dd>
		<dt class="col-sm-2">
			Product name
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ProductName)
		</dd>
		<dt class="col-sm-2">
			Product description
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ProductDescription)
		</dd>
		<dt class="col-sm-2">
			Product status
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Status)
		</dd>
	</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-seqId="@Model.SeqId">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>
